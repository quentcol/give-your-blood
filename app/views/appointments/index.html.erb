<h1 class="appointment-title">Appointments</h1>

<div class="appointments">
  <% @appointments.each do |appointment| %>
    <div class="appointment">
      <div class="field">
        <strong>Date:</strong> <%= appointment.appointment_date %>
      </div>
      <div class="field">
        <strong>Time:</strong> <%= appointment.appointment_time %>
      </div>
      <div class="field">
        <strong>Person in Charge:</strong> <%= appointment.person_in_charge %>
      </div>
      <div class="field">
        <strong>Donor:</strong> <%= appointment.donor.full_name %>
      </div>
      <div class="field">
        <strong>Status:</strong> <%= appointment.status %>
      </div>
      <div class="actions">
        <%= link_to 'Show', appointment %>
        <%= link_to 'Edit', edit_appointment_path(appointment) %>
        <%= link_to 'Delete', appointment, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </div>
    </div>
  <% end %>
</div>

<div class="actions">
  <%= link_to 'New Appointment', new_appointment_path %>
</div>
