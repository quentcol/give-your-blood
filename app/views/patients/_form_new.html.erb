<div class="container" style="padding: 50px; margin-top: 60px;">
  <%= simple_form_for(@patient, url: patients_path, method: "post") do |form| %>
    <% if patient.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h2>
        <ul>
        <% patient.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= form.input :first_name, label: "First Name", input_html: { class: "form-control" } %>

    <%= form.input :last_name, label: "Last Name", input_html: { class: "form-control" } %>

    <%= form.input :address, label: "Address", input_html: { class: "form-control" } %>

    <%= form.input :blood_type, label: "Blood Type", input_html: { class: "form-control" } %>

    <%= form.input :birthdate, label: "Birthdate", input_html: { class: "form-control" } %>

    <%= form.input :national_id, label: "National ID", input_html: { class: "form-control" } %>

    <div class="actions">
      <%= form.button :submit, "Save", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>