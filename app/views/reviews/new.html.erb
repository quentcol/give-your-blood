<h1>New Review for <%= @center.name %></h1>

<%= form_with(model: [@center, @review], local: true) do |form| %>

  <div class="field">
    <%= form.label :rating %>
    <%= form.number_field :rating, step: 0.1, min: 1, max: 5 %>
  </div>

  <div class="field">
    <%= form.label :review_content %>
    <%= form.text_area :review_content %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', centers_path %>