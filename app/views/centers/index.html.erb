<h1>Centers</h1>
<div class="index-container">
  <div class="appointments-container">
    <div class="card-appointment-container">
      <% @centers.each do |center| %>
          <%= link_to center_path(center), class: "card-link" do %>
              <div class="card-appointment">
                <div class="card__section">
                  <p class="card__title"><%= center.name %></p>
                  <p class="card__body"><%= center.address %></p>
                  <%= link_to 'Book an appointment', new_appointment_path, class: 'button alt' %>
                </div>
              </div>
            <% end %>
        <% end %>
    </div>

  </div>
  <div class="map-container">
    <div data-controller="map"
      style="width: 100%; height: 100%; position: absolute; border-radius: 10px;"
      id='map'
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
