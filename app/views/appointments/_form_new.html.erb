
<div class="form-create-new-appointment" style="padding: 10px 150px 50px;">
  <%= form_with model: @appointment do |f| %>

    <%= f.label :appointment_date, "Appointment Date:" %>
    <%= f.date_field :appointment_date, class: "form-control" %>

    <%= f.label :appointment_time, "Appointment Time:" %>
    <%= f.time_field :appointment_time, class: "form-control" %>

    <%= f.label :donor_id %>
    <%= f.hidden_field :donor_id, value: current_user.donor.id %>

    <%= f.label :center_id, "Center:" %>
    <%= f.collection_select :center_id, Center.all, :id, :name, { prompt: "Select Center" }, { class: "form-control" } %>


    <div class="new-appointment-actions-btn">
      <%= f.submit "Confirm", class: "new-appointment-confirm" %>
      <%= link_to "Cancel", donor_path(current_user.donor), class: "new-appointment-cancel" %>
    </div>
    </div>
  <% end %>
</div>
