<%= form_with(model: [@center, @review], local: true, html: { class: "review-form-class" }) do |form| %>

  <div class="review-form-rating-filed">
    <%= form.label :rating, class: "review-form-rating-title" %>
    <%= form.number_field :rating, step: 0.1, min: 1, max: 5, class: "review-form-rating-text" %>
  </div>

  <div class="review-form-text-filed">
    <%= form.label :review_content, class: "review-form-text-title" %>
    <%= form.text_area :review_content, class: "review-form-text-content" %>
  </div>

  <div class="review-form-actions">
    <%= form.submit class: "custom-submit-class" %>
  </div>
<% end %>