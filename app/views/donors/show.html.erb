<h1>Donor Details</h1>
<p><strong>First Name:</strong> <%= @donor.first_name %></p>
<p><strong>Last Name:</strong> <%= @donor.last_name %></p>
<p><strong>Address:</strong> <%= @donor.address %></p>
<p><strong>Blood Type:</strong> <%= @donor.blood_type %></p>
<p><strong>Birthdate:</strong> <%= @donor.birthdate %></p>
<p><strong>National ID:</strong> <%= @donor.national_id %></p>

<%= link_to 'Edit', edit_donor_path(@donor), class: 'btn btn-primary' %>
<%= link_to 'Back', donors_path, class: 'btn btn-secondary' %>
<%= link_to "Delete",
  donor_path(@donor), class: 'btn btn-secondary',
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?" }
%>